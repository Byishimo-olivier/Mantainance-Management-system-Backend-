// Prisma schema for Maintenance Management System
// Update provider and credentials in .env as needed

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  phone     String   @unique
  email     String   @unique
  password  String
  role      Role
  status    String
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  TECH
  CLIENT
}

model MaintenanceRequest {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  clientId             String
  issueType            String
  description          String
  priority             String
  status               String
  assignedTechnicianId String?
  createdAt            DateTime @default(now())
}

model JobEvidence {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  requestId    String
  type         EvidenceType
  imageUrl     String
  uploadedById String
  createdAt    DateTime     @default(now())
}

enum EvidenceType {
  BEFORE
  DURING
  AFTER
}

model Material {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  quantity          Int
  unitCost          Float
  supplier          String
  lowStockThreshold Int
}

model MaterialRequest {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  technicianId String
  requestId    String
  status       String
}

model MaterialRequestItem {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  materialId        String
  quantity          Int
  materialRequestId String
}

model Procurement {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  supplier   String
  totalCost  Float
  invoiceUrl String
  createdAt  DateTime @default(now())
}

model Subscription {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clientId  String
  plan      String
  amount    Float
  status    String
  startDate DateTime
  endDate   DateTime
}

model Technician {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String   @unique
  phone          String
  specialization String[]
  rating         Float    @default(0)
  completed      Int      @default(0)
  status         String   @default("Active")
}

model Issue {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  location    String
  tags        String[]
  assignees   String[]
  overdue     Boolean  @default(false)
  time        String
  photo       String?
  userId      String? // who posted the issue (optional)
  assignedTo  String? // technician assigned
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Manager {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
}
