// --- Preventive & Routine Maintenance Extension ---

model Property {
  id                  String               @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  type                String
  address             String
  assets              Asset[]
  internalTechnicians InternalTechnician[]
  createdAt           DateTime             @default(now())
}

model Asset {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  propertyId  String?   @db.ObjectId
  property    Property? @relation(fields: [propertyId], references: [id])
  name        String
  type        String
  description String?
  createdAt   DateTime  @default(now())
}

model InternalTechnician {
  id                   String                @id @default(auto()) @map("_id") @db.ObjectId
  propertyId           String?               @db.ObjectId
  property             Property?             @relation(fields: [propertyId], references: [id])
  name                 String
  email                String?
  phone                String
  specialty            String[]
  rating               Float                 @default(0)
  completed            Int                   @default(0)
  status               String                @default("Active")
  maintenanceSchedules MaintenanceSchedule[]
  createdAt            DateTime              @default(now())
}

model MaintenanceTemplate {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  type      String
  frequency String
  createdAt DateTime @default(now())
}

model MaintenanceSchedule {
  id           String              @id @default(auto()) @map("_id") @db.ObjectId
  technicianId String?             @db.ObjectId
  technician   InternalTechnician? @relation(fields: [technicianId], references: [id])
  name         String
  status       String
  nextDate     DateTime
  createdAt    DateTime            @default(now())
}

// Prisma schema for Maintenance Management System
// Update provider and credentials in .env as needed

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  phone     String   @unique
  email     String   @unique
  password  String
  role      Role
  status    String
  createdAt DateTime @default(now())
}

enum Role {
  admin
  manager
  technician
  client
}

model MaintenanceRequest {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  clientId             String
  issueType            String
  description          String
  priority             String
  status               String
  assignedTechnicianId String?
  createdAt            DateTime @default(now())
}

model JobEvidence {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  requestId    String
  type         EvidenceType
  imageUrl     String
  uploadedById String
  createdAt    DateTime     @default(now())
}

enum EvidenceType {
  BEFORE
  DURING
  AFTER
}

model Material {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  quantity          Int
  unitCost          Float
  supplier          String
  lowStockThreshold Int
}

model MaterialRequest {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  technicianId String
  requestId    String
  status       String
}

model MaterialRequestItem {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  materialId        String
  quantity          Int
  materialRequestId String
}

model Procurement {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  supplier   String
  totalCost  Float
  invoiceUrl String
  createdAt  DateTime @default(now())
}

model Subscription {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clientId  String
  plan      String
  amount    Float
  status    String
  startDate DateTime
  endDate   DateTime
}

model Technician {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String   @unique
  phone          String
  specialization String[]
  rating         Float    @default(0)
  completed      Int      @default(0)
  status         String   @default("Active")
}

model Issue {
  rejected        Boolean   @default(false)
  rejectedAt      DateTime?
  rejectionReason String?
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  location        String
  tags            String[]
  assignees       Json
  overdue         Boolean   @default(false)
  time            String
  photo           String?
  userId          String? // who posted the issue (optional)
  assignedTo      String? // technician assigned
  address         String?
  beforeImage     String?
  afterImage      String?
  fixTime         String?
  fixDeadline     DateTime?
  status          String?
  approved        Boolean   @default(false)
  approvedAt      DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Feedback {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  message        String
  date           DateTime @default(now())
  issueId        String
  technicianId   String
  clientId       String
  // Optionally, store technician and client names for easier frontend display
  technicianName String?
  clientName     String?
  issueTitle     String?
}

model Manager {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
}
