// --- Preventive & Routine Maintenance Extension ---

model Property {
  id                  String               @id @default(auto()) @map("_id") @db.ObjectId
  userId              String?              @db.ObjectId
  user                User?                @relation(fields: [userId], references: [id])
  name                String
  type                String
  address             String
  clientId            String?              @db.ObjectId
  beds                Int?
  baths               Int?
  area                Int?
  floors              Int?
  blocks              Int?
  block               String?
  rooms               Int?
  photos              String[]
  assets              Asset[]
  internalTechnicians InternalTechnician[]
  issues              Issue[]
  createdAt           DateTime             @default(now())
}

model Asset {
  id                  String             @id @default(auto()) @map("_id") @db.ObjectId
  propertyId          String?            @db.ObjectId
  property            Property?          @relation(fields: [propertyId], references: [id])
  userId              String?            @db.ObjectId
  user                User?              @relation(fields: [userId], references: [id])
  name                String
  type                String
  description         String?
  serialNumber        String?
  identifiers         Json? // e.g. { rfid: '...', barcode: '...', nfc: '...', qr: '...' }
  parentId            String?            @db.ObjectId
  assetTypeId         String?            @db.ObjectId
  location            Json? // e.g. { building: '', floor: '', room: '' }
  gps                 Json? // e.g. { lat: 0.0, lng: 0.0 }
  purchaseDate        DateTime?
  purchaseCost        Float?
  currentValue        Float?
  depreciationRate    Float?
  depreciationHistory Json?
  warrantyUntil       DateTime?
  vendorId            String?            @db.ObjectId
  vendorName          String?
  status              String             @default("Active")
  quantity            Int                @default(1)
  photos              String[]
  documents           String[]
  spareParts          SparePart[]
  movements           AssetMovementLog[] @relation("AssetToMovements")
  issues              Issue[]
  createdAt           DateTime           @default(now())
}

model InternalTechnician {
  id                   String                @id @default(auto()) @map("_id") @db.ObjectId
  propertyId           String?               @db.ObjectId
  property             Property?             @relation(fields: [propertyId], references: [id])
  userId               String?               @db.ObjectId
  user                 User?                 @relation(fields: [userId], references: [id])
  name                 String
  email                String?
  phone                String
  specialty            String[]
  rating               Float                 @default(0)
  completed            Int                   @default(0)
  status               String                @default("Active")
  maintenanceSchedules MaintenanceSchedule[]
  createdAt            DateTime              @default(now())
}

model MaintenanceTemplate {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  type      String
  frequency String
  createdAt DateTime @default(now())
}

model AssetType {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  fields      Json? // custom template fields per asset type
  createdAt   DateTime @default(now())
}

model AssetMovementLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  assetId   String   @db.ObjectId
  asset     Asset    @relation("AssetToMovements", fields: [assetId], references: [id])
  from      Json?
  to        Json?
  movedBy   String?
  notes     String?
  timestamp DateTime @default(now())
}

model SparePart {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  assetId           String?  @db.ObjectId
  asset             Asset?   @relation(fields: [assetId], references: [id])
  name              String
  sku               String?
  quantity          Int      @default(0)
  unitCost          Float?
  lowStockThreshold Int?
  status            String   @default("Available")
  createdAt         DateTime @default(now())
}

model MaintenanceSchedule {
  id           String              @id @default(auto()) @map("_id") @db.ObjectId
  technicianId String?             @db.ObjectId
  technician   InternalTechnician? @relation(fields: [technicianId], references: [id])
  userId       String?             @db.ObjectId
  user         User?               @relation(fields: [userId], references: [id])
  name         String
  email        String
  employees    String
  company      String?
  phone        String?
  date         String
  time         String
  assets       String?
  // Routine scheduling fields
  routine      Boolean             @default(false)
  frequency    String?
  interval     Int?                @default(1)
  lastReminder DateTime?
  // Persistent per-schedule snooze (global)
  snoozedUntil DateTime?
  // Per-user dismissal map: { userId: timestamp }
  dismissedBy  Json?
  status       String
  block        String?
  rooms        String?
  floors       String?
  description  String
  nextDate     DateTime
  createdAt    DateTime            @default(now())
}

model MaintenanceReminderLog {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  scheduleId String   @db.ObjectId
  recipients Json
  method     String // 'script' | 'dashboard' | 'manual'
  sentAt     DateTime @default(now())
  createdAt  DateTime @default(now())
}

// Prisma schema for Maintenance Management System
// Update provider and credentials in .env as needed

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model User {
  id                   String                @id @default(auto()) @map("_id") @db.ObjectId
  name                 String
  phone                String                @unique
  email                String                @unique
  password             String
  role                 Role
  status               String
  createdAt            DateTime              @default(now())
  properties           Property[]
  assets               Asset[]
  internalTechnicians  InternalTechnician[]
  maintenanceSchedules MaintenanceSchedule[]
}

enum Role {
  admin
  manager
  technician
  client
}

model MaintenanceRequest {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  clientId             String
  issueType            String
  description          String
  priority             String
  status               String
  assignedTechnicianId String?
  createdAt            DateTime @default(now())
}

model JobEvidence {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  requestId    String
  type         EvidenceType
  imageUrl     String
  uploadedById String
  createdAt    DateTime     @default(now())
}

enum EvidenceType {
  BEFORE
  DURING
  AFTER
}

model Material {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  quantity          Int
  unitCost          Float
  supplier          String
  lowStockThreshold Int
}

model MaterialRequest {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  technicianId String
  requestId    String
  status       String
}

model MaterialRequestItem {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  materialId        String
  quantity          Int
  materialRequestId String
}

model Procurement {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  supplier   String
  totalCost  Float
  invoiceUrl String
  createdAt  DateTime @default(now())
}

model Subscription {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clientId  String
  plan      String
  amount    Float
  status    String
  startDate DateTime
  endDate   DateTime
}

model Technician {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String   @unique
  phone          String
  specialization String[]
  rating         Float    @default(0)
  completed      Int      @default(0)
  status         String   @default("Active")
}

model Issue {
  rejected        Boolean   @default(false)
  rejectedAt      DateTime?
  rejectionReason String?
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  location        String
  propertyId      String?   @db.ObjectId
  property        Property? @relation(fields: [propertyId], references: [id])
  assetId         String?   @db.ObjectId
  asset           Asset?    @relation(fields: [assetId], references: [id])
  tags            String[]
  assignees       Json
  overdue         Boolean   @default(false)
  time            String
  photo           String?
  userId          String? // who posted the issue (authenticated user)
  anonId          String? // anonymous submission ID
  submissionType  String    @default("authenticated") // "authenticated" or "anonymous"
  name            String? // contact name (for both auth and anon)
  email           String? // contact email (for both auth and anon)
  phone           String? // contact phone (for both auth and anon)
  assignedTo      String? // technician assigned
  inspectorId     String?  @db.ObjectId // authenticated client inspector id
  requestorId     String?  // anonymous requestor id/token
  address         String?
  beforeImage     String?
  afterImage      String?
  fixTime         String?
  fixDeadline     DateTime?
  status          String?
  approved        Boolean   @default(false)
  approvedAt      DateTime?
  resubmitted     Boolean   @default(false)
  resubmittedAt   DateTime?
  resubmittedBy   String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model TechnicianInvite {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  technicianId  String?  @db.ObjectId
  email         String
  token         String   @unique
  used          Boolean  @default(false)
  expiresAt     DateTime?
  createdAt     DateTime @default(now())
}

model Feedback {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  message        String
  date           DateTime @default(now())
  issueId        String
  technicianId   String
  clientId       String
  // Optionally, store technician and client names for easier frontend display
  technicianName String?
  clientName     String?
  issueTitle     String?
}

model Manager {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  title     String
  message   String
  type      String   @default("info") // info, success, warning, error
  read      Boolean  @default(false)
  link      String?  // Optional URL to navigate to
  createdAt DateTime @default(now())
}